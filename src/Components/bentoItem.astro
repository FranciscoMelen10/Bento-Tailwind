---
interface Props {
  class?: string;
  img: string;
}

const { img } = Astro.props;
---

<article
  class={`${Astro.props.class}
    border-2 border-black rounded-2xl relative bg-cover bg-no-repeat hover:scale-95 transition-transform opacity-90`}
  style=`background-image: url(${img});`
>
  <slot />
</article>
